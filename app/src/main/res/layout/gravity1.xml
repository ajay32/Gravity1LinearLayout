<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <!-- relation between parent (LinearLayout) and child any
    if child is [[wrap_content]]  then you can set gravity attrib in parent
    to place child any where ...

    IF ONE ELEMENT ...if more than one ..see next file ..
    -->

    <LinearLayout
        android:gravity="top|center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Men Hairstyles" />



    </LinearLayout>




</LinearLayout>
